{% extends 'base.html.twig' %}

{% block title %}All programs{% endblock %}

{% block body %}
    <h1 class="text-center">Toutes les séries : </h1>
    <div class="container">
    {% for program in programs %}
        <div class="col-10 col-md-10 row m-2">
            <div>
                <img src="{{ program.poster }}" class="thumbnail" height="150px">
            </div>
            <div class="ml-2 col-md-8">
                <h2 class="text-left"><a href="{{ path('wild_show', { 'slug':slugs[loop.index0] }) }}">{{ loop.index }} / {{ program.title }}</a></h2>
                <h6>Catégorie : <a href="{{ path('show_category', { 'categoryName':program.category.name }) }}">{{ program.category.name }}</a></h6>
                <p class="text-justify">{{ program.summary }}</p>
            </div>
        </div>
    {% else %}
        Aucune série trouvée.
    {% endfor %}
